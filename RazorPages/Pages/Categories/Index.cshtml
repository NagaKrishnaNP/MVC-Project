@page
@model RazorPages.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
        <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end">
             <a asp-page="/Categories/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
            <th style="padding-top:15px; padding-bottom:15px;padding-left:15px" class="text-center">
            Category Name
        </th>
            <th style="padding-top:15px ;padding-bottom:15px;padding-left:15px" class="text-center">
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.categoryList.OrderBy(c=>c.DisplayOrder))
        {
            <tr>
        <td class="pt-3 pb-3 text-center">
                @if(obj.CategoryName.Equals("Romance"))
                {
                    @obj.CategoryName  <i class="bi bi-hearts"></i>
                }
                else if (obj.CategoryName.Equals("Adventure"))
                {
                    @obj.CategoryName  <i class="bi bi-airplane-engines-fill"></i>
                }
                else
                {
                    @obj.CategoryName  <i class="bi bi-people"></i>
                }

        </td>
                <td class="pt-3 pb-3 text-center">
        @obj.DisplayOrder

    </td>
    <td class="col-3">
        <div class="w-100 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@obj.CategoryId " class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i> EDIT</a>
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.CategoryId " class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> DELETE</a>
        </div>
    </td>
            </tr>
        }
    </tbody>
</table>